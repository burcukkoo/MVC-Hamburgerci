@model KD12MVCHamburger.Data.Menu

@{
    ViewData["Title"] = "Menü Düzenle";
}

<h1>Menü Düzenle</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MenuDuzenle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label">Menü Adı</label>
                <input asp-for="MenuAd" class="form-control" />
                <span asp-validation-for="MenuAd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fiyat" class="control-label"></label>
                <input asp-for="Fiyat" class="form-control" />
                <span asp-validation-for="Fiyat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary mt-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary mt-2" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
